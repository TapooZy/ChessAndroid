<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ibQueen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/white_queen" />

    <ImageButton
        android:id="@+id/ibKnight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/white_knight" />

    <ImageButton
        android:id="@+id/ibRook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/white_rook" />

    <ImageButton
        android:id="@+id/ibBishop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/white_bishop" />

</LinearLayout>